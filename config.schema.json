{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "profile": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "pseudo": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        },
        "repository": {
          "type": "string"
        }
      },
      "required": ["name", "title", "pseudo", "url", "signature", "repository"]
    },
    "friends": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "company": {
            "type": "string"
          },
          "website": {
            "type": "string"
          }
        },
        "required": ["name", "title", "company", "website"]
      }
    },
    "experiences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "company": {
            "type": "string"
          },
          "position": {
            "type": "string"
          },
          "website": {
            "type": "string"
          },
          "start": {
            "type": "string"
          },
          "end": {
            "type": ["string", "null"]
          },
          "description": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "properties": {
              "city": {
                "type": "string"
              },
              "country": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["remote", "onsite", "hybrid"]
              }
            },
            "required": ["city", "country", "type"]
          }
        },
        "required": ["company", "position", "start", "end", "description", "location", "website"]
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": ["name", "url"]
      }
    }
  },
  "required": ["friends", "experiences", "profile", "links"]
}
